@page "{searchString?}"
@model MyPhotosRazor.Pages.File.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Files</h1>
<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Files[0].FileId)</th>
            <th>@Html.DisplayNameFor(model => model.Files[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Files[0].Path)</th>
            <th>@Html.DisplayNameFor(model => model.Files[0].CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Files)
        {
            <tr style="font-size:small">
                <td>@Html.DisplayFor(modelItem => item.FileId)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Path)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>
                    <a asp-page="../FileData/Index" asp-route-id="@item.FileId">View file data</a>
                </td>
            </tr>
        }
    </tbody>
</table>

